{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "src", "slate.config.ts"],
  "exclude": ["node_modules", "dist", "tina"],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["src/*"],
      "~@/*": ["./*"]
    },
    "jsxImportSource": "react"
  }
}
